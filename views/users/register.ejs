<% layout('layout/boilerplate')  %>
<h1>Register</h1>
<form action="/register" method="POST" class="validated-form" novalidate>
    <div class="mb-3">
        <label for="form-label" for="username">Username</label>
        <input autocomplete="off" class="form-control" type="text" id="username" name="username" required>
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label" for="email">Email</label>
        <input class="form-control" type="email" id="email" name="email" required autocomplete="off">
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>

    <div class="mb-3">
        <label class="form-label" for="password">password</label>
        <input class="form-control" type="password" id="password" name="password" required autocomplete="off">
        <div class="valid-feedback">
            Looks good!
        </div>
    </div>

    <button class="btn btn-success">Register</button>
</form>